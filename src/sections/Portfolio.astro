---
import Card from "../components/Card.astro";
import { getContent } from "../translations/translations";

const content = getContent(Astro.url.pathname);
---

<section class="container" id="proyects">
  <h2>{content.Proyects.title}</h2>

  <div class="car-container">
    <Card
      title="Barber Page"
      description="Astro, Typescript, HTML, CSS"
      url="img/barber-proyect.webp"
    >
  
  </Card>
    <Card
      title="Course Manager"
      description="Angular, TypeScript, Golang, Sqlite, AWS"
      url="img/school-proyect.mp4"
    />

    <Card
      title="RBCA API"
      description=".NET, SQL SERVER, Entity Framework"
      url="svg/DbDiagram-RBCA.svg"
    />
  </div>
</section>


<style>
  .container {
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .car-container {
    display: flex;
    width: 100%;
    justify-content: space-evenly;
    align-items: center;
    margin-top: 20px;
    flex-direction: row;
  }

  @media (max-width: 780px) {
    .car-container {
      flex-direction: column;
      gap: 20px;
    }
  }
</style>
