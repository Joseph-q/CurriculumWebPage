---
import { getContent } from "../translations/translations";

const content = getContent(Astro.url.pathname)
---
<footer class="footer" id="contact">
  <div class="footer-section">
    <h4>Contact</h4>
    <p>Email: contact@juseph.dev</p>
    <p>Phone: +52 231 162 87 54</p>
  </div>
  <div class="footer-bottom">
    <p>{content.Footer.copy}</p>
  </div>
</footer>

<style>
  .footer {
    background-color: #121212;
    color: #fff;
    padding: 20px;
    font-family: Arial, sans-serif;
  }

  .footer-section {
    margin-bottom: 20px;
  }

  .footer-section h4 {
    font-size: 18px;
    margin-bottom: 10px;
    color: #fff;
  }

  .footer-section p {
    font-size: 14px;
    color: #bbb;
    margin: 5px 0;
  }

  .footer-bottom {
    border-top: 1px solid #444;
    padding-top: 10px;
    text-align: center;
    font-size: 12px;
    color: #777;
  }

  .footer-bottom p {
    color: #bbb;
  }
</style>
