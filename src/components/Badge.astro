---
interface Props {
  url: string;
  alt: string;
  title: string;
}

const { url, alt, title } = Astro.props;
---

<div class="badge">
  <img src={url} alt={alt} class="logo" />
  <p>{title}</p>
</div>

<style>
  .badge {
    text-align: center;
    width: 120px;
  }

  .badge .logo {
    width: 50px;
    height: 50px;
    margin-bottom: 10px;
  }

  .badge p {
    font-size: 1.1rem;
    margin: 0;
  }
</style>
